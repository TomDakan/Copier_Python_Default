{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Pytest: Debug Test Suite",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}