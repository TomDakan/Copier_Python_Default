name: CI
on: [push, pull_request]

jobs:
  qa:
    name: "QA"
    runs-on: ubuntu-latest
    strategy:
      matrix:
        # Test on the version you specified, plus one older stable version.
        python-version: ["{{ python_version }}", "3.12"]

    steps:
      - uses: actions/checkout@v4

      - name: Set up PDM
        uses: pdm-project/setup-pdm@v4
        with:
          python-version: {{ python_version }}
          cache: true

      - name: Install dependencies
        run: pdm install --dev

    {% if use_safety %} # Conditionally add safety check
      - name: Check for vulnerable dependencies
        run: pdm run safety-check
    {% endif %}
      - name: Run QA Suite (Format, Lint, Types, Tests)
        run: pdm run qa
    {% if use_codecov %}
      - name: Upload coverage to Codecov
        uses: codecov/codecov-action@v4
        with:
          {% raw %}token: ${{ secrets.CODECOV_TOKEN }}{% endraw %}
          fail_ci_if_error: true
    {% endif %}
